@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Documents - HHR CPA</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 0; padding: 0; }
        .header { background-color: #333; color: white; padding: 10px 20px; text-align: center; }
        .nav { background-color: #f4f4f4; padding: 10px; text-align: center; }
        .nav a { margin: 0 15px; text-decoration: none; color: #333; }
        .content { padding: 20px; margin-bottom: 80px; }
        .footer { background-color: #333; color: white; text-align: center; padding: 10px; position: fixed; bottom: 0; width: 100%; }
        .upload-section { margin-bottom: 30px; padding: 20px; border: 2px dashed #ccc; border-radius: 5px; }
        .documents-list { list-style: none; padding: 0; }
        .document-item { padding: 10px; margin: 10px 0; background-color: #f9f9f9; border-radius: 5px; display: flex; justify-content: space-between; align-items: center; }
        .document-info { flex-grow: 1; }
        .document-actions button { margin-left: 10px; padding: 5px 15px; cursor: pointer; }
        .btn-upload { background-color: #4CAF50; color: white; padding: 10px 20px; border: none; cursor: pointer; border-radius: 5px; }
        .btn-upload:hover { background-color: #45a049; }
        .btn-download { background-color: #008CBA; color: white; border: none; cursor: pointer; border-radius: 3px; }
        .btn-delete { background-color: #f44336; color: white; border: none; cursor: pointer; border-radius: 3px; }
        #file-input { margin: 10px 0; }
        .loading { display: none; color: #666; font-style: italic; }
    </style>
</head>
<body>
    <div class="header">
        <h1>Document Management</h1>
    </div>
    <div class="nav">
        <a href="/">Home</a>
        <a href="/Home/About">About</a>
        <a href="/Home/Services">Services</a>
        <a href="/Home/Documents">Documents</a>
        <a href="/Home/Contact">Contact</a>
    </div>
    <div class="content">
        <div class="upload-section">
            <h2>Upload Documents</h2>
            <p>Select files to upload (PDF, Word, Excel, Images)</p>
            <input type="file" id="file-input" multiple accept=".pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png" />
            <button class="btn-upload" onclick="uploadFiles()">Upload</button>
            <p class="loading" id="upload-loading">Uploading...</p>
        </div>

        <h2>Your Documents</h2>
        <ul class="documents-list" id="documents-list">
            <li>Loading documents...</li>
        </ul>
    </div>
    <div class="footer">
        <p>&copy; @DateTime.Now.Year - HHR CPA</p>
    </div>
</body>
</html>

@section scripts {
    <script>
        // Load documents on page load
        document.addEventListener('DOMContentLoaded', function () {
            loadDocuments();
        });

        function loadDocuments() {
            fetch('/api/documents')
                .then(response => response.json())
                .then(data => {
                    const documentsList = document.getElementById('documents-list');
                    documentsList.innerHTML = '';

                    if (data.length === 0) {
                        documentsList.innerHTML = '<li>No documents uploaded yet.</li>';
                        return;
                    }

                    data.forEach(doc => {
                        const listItem = document.createElement('li');
                        listItem.className = 'document-item';

                        const fileSize = (doc.FileSize / 1024).toFixed(2);
                        const uploadDate = new Date(doc.UploadedDate).toLocaleDateString();

                        listItem.innerHTML = `
                            <div class="document-info">
                                <strong>${doc.FileName}</strong><br />
                                <small>Size: ${fileSize} KB | Uploaded: ${uploadDate}</small>
                            </div>
                            <div class="document-actions">
                                <button class="btn-download" onclick="downloadDocument(${doc.Id}, '${doc.FileName}')">Download</button>
                                <button class="btn-delete" onclick="deleteDocument(${doc.Id})">Delete</button>
                            </div>
                        `;
                        documentsList.appendChild(listItem);
                    });
                })
                .catch(error => {
                    console.error('Error loading documents:', error);
                    document.getElementById('documents-list').innerHTML = '<li>Error loading documents.</li>';
                });
        }

        function uploadFiles() {
            const fileInput = document.getElementById('file-input');
            const files = fileInput.files;

            if (files.length === 0) {
                alert('Please select at least one file.');
                return;
            }

            const formData = new FormData();
            for (let i = 0; i < files.length; i++) {
                formData.append('file', files[i]);
            }

            document.getElementById('upload-loading').style.display = 'block';

            fetch('/api/documents/upload', {
                method: 'POST',
                body: formData
            })
                .then(response => response.json())
                .then(data => {
                    document.getElementById('upload-loading').style.display = 'none';
                    fileInput.value = ''; // Clear input
                    alert('Files uploaded successfully!');
                    loadDocuments(); // Reload the list
                })
                .catch(error => {
                    document.getElementById('upload-loading').style.display = 'none';
                    console.error('Error uploading files:', error);
                    alert('Error uploading files. Please try again.');
                });
        }

        function downloadDocument(id, fileName) {
            window.location.href = `/api/documents/download/${id}`;
        }

        function deleteDocument(id) {
            if (!confirm('Are you sure you want to delete this document?')) {
                return;
            }

            fetch(`/api/documents/${id}`, {
                method: 'DELETE'
            })
                .then(response => {
                    if (response.ok) {
                        alert('Document deleted successfully!');
                        loadDocuments(); // Reload the list
                    } else {
                        alert('Error deleting document.');
                    }
                })
                .catch(error => {
                    console.error('Error deleting document:', error);
                    alert('Error deleting document. Please try again.');
                });
        }
    </script>
}
